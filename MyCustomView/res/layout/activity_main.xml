<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.xuexiang.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp" >

            <com.xuexiang.view.CustomTextView
                android:id="@+id/circlemenu"
                style="@style/CustomButtonStyle"
                android:text="CircleMenu Demo" />

            <com.xuexiang.view.CustomTextView
                android:id="@+id/statebutton"
                style="@style/CustomButtonStyle"
                android:text="StateButton Demo" />

            <com.xuexiang.view.CustomTextView
                android:id="@+id/webview"
                style="@style/CustomButtonStyle"
                android:text="Webview Demo" />

            <com.xuexiang.view.CustomTextView
                android:id="@+id/jptabbar"
                style="@style/CustomButtonStyle"
                android:text="JpTabbar Demo" />

            <com.xuexiang.view.CustomTextView
                android:id="@+id/faboptions"
                style="@style/CustomButtonStyle"
                android:text="Faboptions Demo" />
            
            <com.xuexiang.view.CustomTextView
                android:id="@+id/pageslidingtab"
                style="@style/CustomButtonStyle"
                android:text="PageSlidingTab Demo" />
            
            <com.xuexiang.view.CustomTextView
                android:id="@+id/draglayoutexpand"
                style="@style/CustomButtonStyle"
                android:text="DraglayoutExpand Demo" />
            
            <com.xuexiang.view.CustomTextView
                android:id="@+id/snow"
                style="@style/CustomButtonStyle"
                android:text="Snow Demo" />
            
            <com.xuexiang.view.CustomTextView
                android:id="@+id/slidemenu"
                style="@style/CustomButtonStyle"
                android:text="SlideMenu Demo" />
            
            <com.xuexiang.view.CustomTextView
                android:id="@+id/calendar"
                style="@style/CustomButtonStyle"
                android:text="Calendar Demo" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>