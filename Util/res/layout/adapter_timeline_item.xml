<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/uplevel_item_left_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:gravity="right|center_vertical" >

        <TextView
            android:id="@+id/uplevel_time_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2012/6/12"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/uplevel_level_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="asfashfak"
            android:textColor="#8B8B83" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal" >

        <View
            android:id="@+id/line_top"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#B3A9A7" />

        <ImageView
            android:id="@+id/tuicker_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_top" />

        <View
            android:id="@+id/line_bottom"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tuicker_time"
            android:background="#B3A9A7" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/uplevel_item_right_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/uplevel_time_right_tv"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2012/6/15"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/uplevel_level_right_tv"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ashfkahsfai"
            android:textColor="#8B8B83" />
    </LinearLayout>

</LinearLayout>