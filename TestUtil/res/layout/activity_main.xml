<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

   <include layout="@layout/top_menu_bar" />
   <ScrollView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:scrollbars="none">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="5dp">
	    <Button
	        android:id="@+id/btn_common"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="Common Demo" />
	
	    <Button
	        android:id="@+id/btn_data"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="Data Demo" />
	    
	    <Button
	        android:id="@+id/btn_dapter"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="Adapter Demo" />
	     
	    <Button
	        android:id="@+id/btn_service"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="Service Demo" />
	    
	    <Button
	        android:id="@+id/btn_file"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="File Demo" />
	
	    <Button
	        android:id="@+id/btn_net"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="Net Demo" />
	    
	    <Button
	        android:id="@+id/btn_resource"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="Resource Demo" />
	    
	    <Button
	        android:id="@+id/btn_system"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="System Demo" />
	
	    <Button
	        android:id="@+id/btn_view"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="View Demo" />
     </LinearLayout>
    </ScrollView>    
</LinearLayout>