<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include layout="@layout/top_menu_bar" />
    
     <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
		    <Button
		        android:id="@+id/btn_confirmdialog"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:onClick="onClick"
		        android:text="Confirm Dialog Demo" />
		    
		     <Button
		        android:id="@+id/btn_confirmdialog1"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:onClick="onClick"
		        android:text="Confirm Dialog1 Demo" />
		     
		     <Button
		        android:id="@+id/btn_confirmpopwindowdialog"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:onClick="onClick"
		        android:text="ConfirmPopwindowDialog Demo" />
		     
		     <Button
		        android:id="@+id/btn_confirmlayoutdialog"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:onClick="onClick"
		        android:text="ConfirmLayoutDialog Demo" />
		      
		     <Button
		        android:id="@+id/btn_confirmfragmentdialog"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:onClick="onClick"
		        android:text="ConfirmFragmentDialog Demo" />
		    
		     <Button
		        android:id="@+id/btn_loading_dialog"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:onClick="onClick"
		        android:text="弹跳loadingDialog" />
		    
		    <Button
		        android:id="@+id/btn_loading_view"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:onClick="onClick"
		        android:text="弹跳loadingView" />
		    
		    <Button
		        android:id="@+id/btn_loading_Animator_dialog"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:onClick="onClick"
		        android:text="弹跳loadingAnimatorDialog" />
		    
		    <Button
		        android:id="@+id/btn_SpotsDialog"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:onClick="onClick"
		        android:text="SpotsDialog" />
		    
		    <Button
		        android:id="@+id/btn_MonIndicatorDialog"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:onClick="onClick"
		        android:text="MonIndicatorDialog" />
		    
		    <Button
		        android:id="@+id/btn_CircularProgressDialog"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:onClick="onClick"
		        android:text="CircularProgressDialog" />
		    
		    <Button
		        android:id="@+id/btn_RoundProgressBarDialog"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:onClick="onClick"
		        android:text="RoundProgressBarDialog" />
		    
		    <Button
		        android:id="@+id/btn_HoriztalProgressBarDialog"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:onClick="onClick"
		        android:text="HoriztalProgressBarDialog" />
		    
		    <Button
		        android:id="@+id/btn_CustomDialog"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:onClick="onClick"
		        android:text="CustomDialog" />
		    
		
		    <com.xuexiang.view.dialog.LoadingView
		        android:id="@+id/loadView"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:layout_margin="30dp"
		        app:loadingText="加载中..." />  
		        

	    </LinearLayout>
    </ScrollView>
</LinearLayout>