<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E3741"
    android:orientation="vertical" >

    <com.xuexiang.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp" >

            <com.xuexiang.view.customprogressbar.MyHoriztalProgressBar
                android:id="@+id/progressbar1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:progress="30" />

            <com.xuexiang.view.customprogressbar.MyHoriztalProgressBar
                android:id="@+id/progressbar2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:progress="60"
                app:progressbar_reach_color="#000000"
                app:progressbar_reach_height="4dp"
                app:progressbar_text_color="#000000"
                app:progressbar_unreach_color="#ffffff"
                app:progressbar_unreach_height="3dp" />

            <com.xuexiang.view.customprogressbar.MyHoriztalProgressBar
                android:id="@+id/progressbar3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:progress="70"
                app:progressbar_reach_color="#4cdcdc"
                app:progressbar_reach_height="5dp"
                app:progressbar_text_color="#4cdcdc"
                app:progressbar_unreach_color="#aadddd"
                app:progressbar_unreach_height="3dp" />

            <com.xuexiang.view.customprogressbar.MyRoundProgressBar
                android:id="@+id/progressbar4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="50"
                app:progressbar_reach_color="#f7a63c"
                app:progressbar_text_color="#f7a63c"
                app:progressbar_unreach_color="#f7c06e" />

            <com.xuexiang.view.customprogressbar.MyRoundProgressBar
                android:id="@+id/progressbar5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progress="100"
                app:progressbar_radius="60dp"
                app:progressbar_reach_color="#f456c5"
                app:progressbar_text_color="#f456c5"
                app:progressbar_text_size="18sp"
                app:progressbar_unreach_color="#f194e1" />

            <com.xuexiang.view.customprogressbar.MyRoundProgressBar2
                android:id="@+id/progressbar6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:progress="60"
                app:progressbar_radius="15dp"
                app:progressbar_reach_color="#218df2"
                app:progressbar_unreach_color="#218df2" />

            <com.xuexiang.view.customprogressbar.MyHoriztalProgressBar2
                android:id="@+id/progressbar7"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:progress="30" />

            <com.xuexiang.view.LoadingButton
                android:id="@+id/lbtn_default"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <Button
                android:id="@+id/btn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="增加进度" />

            <com.xuexiang.view.customprogressbar.CBProgressBar
                android:id="@+id/my_progress"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                app:orientation="circle"
                app:percent_text_color="@color/percent_text_color"
                app:percent_text_size="@dimen/percent_text_size" />

            <com.xuexiang.view.customprogressbar.CBProgressBar
                android:id="@+id/my_progress2"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                app:isHorizonStroke="true"
                app:orientation="horizontal"
                app:percent_text_color="@color/percent_text_color_2"
                app:percent_text_size="@dimen/percent_text_size_large"
                app:progressBarBgColor="@color/progressbar_bg_color_1"
                app:progressColor="@color/progress_color_1"
                app:rect_round="@dimen/horizontal_corner" />

            <com.xuexiang.view.customprogressbar.CBProgressBar
                android:id="@+id/my_progress3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                app:orientation="sector"
                app:percent_text_color="@color/percent_text_color"
                app:percent_text_size="@dimen/percent_text_size"
                app:sectorColor="#aaffffff" />

            <Button
                android:id="@+id/btn_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp" />

            <com.xuexiang.view.customprogressbar.ZYDownloading
                android:id="@+id/acd_zydownloading"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#0099CC" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>