<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.xuexiang.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.xuexiang.view.ninegridview.LGNineGrideView
        android:id="@+id/grideView"
        android:layout_below="@+id/title_bar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:singleImageRatio="0.7"
        app:singleImageRatioMode="@integer/SINGLE_IMAGE_MODE_SPECIFIED_RATIO" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grideView"
        android:text="change size" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:text="jump to list test" />

</RelativeLayout>